    "AADApps": [
        {
            "Id": "service",
            "Name": "msal-hybrid-spa",
            "Kind": "WebApi",
            "Audience": "AzureADMyOrg",
            "HomePage": "https://localhost:5000",
            "ReplyUrls": "http://localhost:5000/redirect",
            "PasswordCredentials": "Auto",
            "Sample": {
                "SampleSubPath": "6-AdvancedScenarios\\4-hybrid-spa\\App",
                "ProjectDirectory": "\\4-hybrid-spa\\App"
            },
            
            "ManualSteps": [
                {
                    "Comment": "Navigate to the Manifest page, find the property 'accessTokenAcceptedVersion' and set it to '2'"
                },
                {
                    "Comment": "Navigate to the Manifest page, find the 'optionalClaims' section and change its default value to request  'idToken' claims"

                }
            ],
            "RequiredResourcesAccess": [    
                {
                    "Resource": "Microsoft Graph",
                    "DelegatedPermissions": [
                        "User.Read"
                    ]
                },
                {
                    "Resource": "service",
                    "DelegatedPermissions": [
                        "access_as_user"
                    ]
                }
            ]
        }
    ],  
     "CodeConfiguration": [
         {
            "App": "service",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\App\\.env",
            "Mappings": [
               {
                    "key": "Enter_the_Application_Id_Here",
                    "value": ".AppId"
               },
               {
                    "key": "Enter_the_Tenant_Info_Here",
                    "value": "$tenantId"
               },
               {
                    "key": "Enter_the_Client_Secret_Here",
                    "value": ".AppKey"
               },
               {
                   "key": "Redirect_URI",
                   "value": ".ReplyUrls"
               }
            ]
         },
         {
            "App": "service",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\App\\client\\src\\authConfig.js",
            "Mappings": [
                {
                    "key": "Enter_the_Application_Id_Here",
                    "value": ".AppId"
                },
                {
                    "key": "Enter_the_Tenant_Info_Here",
                    "value": "$tenantId"
                },
                 {
                    "key": "Enter_the_Web_Api_Scope_Here",
                    "value": "service.Scope"
                }
            ]
         }
     ]
}