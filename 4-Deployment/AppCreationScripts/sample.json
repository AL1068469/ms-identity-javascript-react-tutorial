{
    "Sample": {
        "Title": "A React single-page application using MSAL React to authorize users for calling a protected function web API on Azure Static Web Apps",
        "Level": 200,
        "Client": "React SPA",
        "Service": "Function web API",
        "RepositoryUrl": "ms-identity-javascript-react-tutorial",
        "Endpoint": "AAD v2.0"
    },
    "AADApps": [
        {
            "Id": "spa",
            "Name": "msal-react-static",
            "Kind": "SinglePageApplication",
            "Audience": "AzureADMyOrg",
            "HomePage": "http://localhost:3000/",
            "ReplyUrls": "http://localhost:3000/",
            "RequiredResourcesAccess": [
                {
                    "Resource": "Microsoft Graph",
                    "DelegatedPermissions": [
                        "User.Read"
                    ]
                }
            ],
            "ManualSteps": [
                {
                    "Comment": "Navigate to the 'Expose an API' page and set an APP ID URI. Then, add a scope named 'access_as_user'. Copy the full APP ID URI with scope to 'authConfig.js' in APP/src"
                },
                {
                    "Comment": "Navigate to the Manifest page and change 'accessTokenAcceptedVersion' to 2."
                },
                {
                    "Comment": "Navigate to the Manifest page, find the 'replyUrlsWithType' section and change the type of reply URI to 'Spa'"
                }
            ]
        }
    ],
    "CodeConfiguration": [
        {
            "App": "spa",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\App\\src\\authConfig.js",
            "Mappings": [
                {
                    "key": "Enter_the_Application_Id_Here",
                    "value": ".AppId"
                },
                {
                    "key": "Enter_the_Tenant_Info_Here",
                    "value": "$tenantId"
                }
            ]
        },
        {
            "App": "spa",
            "SettingKind": "JSON",
            "SettingFile": "\\..\\App\\api\\local.settings.json",
            "Mappings": [
                {
                    "key": "CLIENT_ID",
                    "value": ".AppId"
                },
                {
                    "key": "TENANT_INFO",
                    "value": "$tenantId"
                }
            ]
        }
    ]
}